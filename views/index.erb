<!DOCTYPE html>
<html lang="ja">
<head>
	<meta charset="UTF-8">
	<title>LA確認テスト</title>
	<link rel="stylesheet" href="/assets/css/count.css">
</head>
<body>
	<!-- 見出し -->
	<form action="/create" method="post">
		<input type="text" name="title" placeholder="見出し">
		<button type="submit" value="送信">更新</button>
	</form>
	<div class="large">
		<% @counts.each do |count| %>
		<h2><%= count.title %></h2>
		<h1><%= count.number %></h1>
		<form action="/plus/<%= count.id %>" method="post">
			<input type="submit" value="+">
		</form>
		<form action="/minus/<%= count.id %>" method="post">
			<input type="submit" value="-">
		</form>
		<form action="/double/<%= count.id %>" method="post">
			<input type="submit" value="×2">
		</form>
		<form action="/divide/<%= count.id %>" method="post">
			<input type="submit" value="÷2">
		</form>
		<form action="/clear/<%= count.id %>" method="post">
			<input type="submit" value="clear">
		</form>
		<% end %>
	</div>
</body>
</html>
